{
  "name": "linpax/microphp-framework",
  "type": "library",
  "license": "MIT",
  "homepage": "http://micro.linpax.org/",
  "description": "Very small framework written on php to create HL-apps using hierarchical MVC pattern",
  "keywords": [
    "microphp",
    "framework"
  ],
  "support": {
    "email": "testuser@mail.linpax.org",
    "issues": "https://trello.com/b/Zqwf5gYP/microphp",
    "forum": "http://forum.micro.linpax.org/",
    "wiki": "http://wiki.micro.linpax.org/",
    "source": "https://github.com/lugnsk/micro"
  },
  "authors": [
    {
      "name": "Oleg Lunegov",
      "email": "antivir88@mail.ru",
      "homepage": "http://linpax.org/",
      "role": "Founder and project lead"
    }
  ],
  "minimum-stability": "dev",
  "suggest": {
    "ext-curl": "required",
    "ext-pdo": "required",
    "ext-pdo_mysql": "required"
  },
  "require": {
    "php": ">=5.4.0",
    "ext-mbstring": "*",
    "lib-pcre": ">=8.31",
    "zendframework/zend-diactoros": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "Micro\\": ""
    }
  },
  "require-dev": {
    "phpunit/phpunit-selenium": "2.x-dev",
    "phpunit/phpunit": "4.8.x-dev",
    "codeclimate/php-test-reporter": "0.3.*",
    "scrutinizer/ocular": "~1.1"
  }
}
